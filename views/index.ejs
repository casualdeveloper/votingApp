<%- include header.ejs %>
    <div class="jumbotron" id="jumb">
        <div class="container">
            <h1 class="display-3">FCC voting app</h1>
        </div>
    </div>
    <div class="container">
        <div class="card">
            <div class="card-block">
                <div class="row no-gutters justify-content-around">
                    <% for(var i = 0; i < polls.length; i++){ %>
                        <% var a = (i==polls.length-1 && (i+1)%2 !== 0)?"col-md-12":"col-md-6" %>
                        <div class="<%= a  %> list-custom-button-spacing">
                            <a href=<%= "/poll/" + polls[i]._id %> class="button button-block button-jumbo list-custom-button list-custom-button-shadow mx-1">
                                <%= polls[i].title %>
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
<%- include footer.ejs %>